<tr>
  <td>
    <%= plate.color %>
  </td>

  <td>
    <%= plate.fancy %>
  </td>

  <td>
    <%= plate.dancing %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to plate, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_plate_url(plate), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to plate, method: :delete, data: { confirm: "Do you really want to delete this plate?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>

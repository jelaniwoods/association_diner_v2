<% was_validated = level_item.errors.any? %>

<% form_html_options = { novalidate: true, class: "mb-3" } %>

<%= form_for(level_item, html: form_html_options) do |f| %>
  <div class="form-group">
    <% level_id_class = "form-control" %>
    <% level_id_was_invalid = level_item.errors.include?(:level_id) %>

    <% if was_validated %>
      <% if level_id_was_invalid %>
        <% level_id_class << " is-invalid" %>
      <% else %>
        <% level_id_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :level_id %>

    <%= f.number_field :level_id, class: level_id_class, placeholder: "Enter level" %>
    <% if level_id_was_invalid %>
      <% level_item.errors.full_messages_for(:level_id).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% item_id_class = "form-control" %>
    <% item_id_was_invalid = level_item.errors.include?(:item_id) %>

    <% if was_validated %>
      <% if item_id_was_invalid %>
        <% item_id_class << " is-invalid" %>
      <% else %>
        <% item_id_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :item_id %>

    <%= f.number_field :item_id, class: item_id_class, placeholder: "Enter item" %>
    <% if item_id_was_invalid %>
      <% level_item.errors.full_messages_for(:item_id).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>

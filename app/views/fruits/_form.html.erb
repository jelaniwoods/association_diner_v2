<% was_validated = fruit.errors.any? %>

<% form_html_options = { novalidate: true, class: "mb-3" } %>

<%= form_for(fruit, html: form_html_options) do |f| %>
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = fruit.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>

    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <% if name_was_invalid %>
      <% fruit.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% size_class = "form-control" %>
    <% size_was_invalid = fruit.errors.include?(:size) %>

    <% if was_validated %>
      <% if size_was_invalid %>
        <% size_class << " is-invalid" %>
      <% else %>
        <% size_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :size %>

    <%= f.text_field :size, class: size_class, placeholder: "Enter size" %>
    <% if size_was_invalid %>
      <% fruit.errors.full_messages_for(:size).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-check">
    <% dancing_class = "form-check-input" %>
    <% dancing_was_invalid = fruit.errors.include?(:dancing) %>

    <% if was_validated %>
      <% if dancing_was_invalid %>
        <% dancing_class << " is-invalid" %>
      <% else %>
        <% dancing_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dancing, class: "form-check-label" do %>
      <%= f.check_box :dancing, class: dancing_class %> Dancing
    <% end %>
    <% if dancing_was_invalid %>
      <% fruit.errors.full_messages_for(:dancing).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>

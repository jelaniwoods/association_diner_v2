<tr>
  <td>
    <%= fruit.name %>
  </td>

  <td>
    <%= fruit.size %>
  </td>

  <td>
    <%= fruit.dancing %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to fruit, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_fruit_url(fruit), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to fruit, method: :delete, data: { confirm: "Do you really want to delete this fruit?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
